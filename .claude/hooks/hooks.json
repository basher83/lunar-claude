{
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Edit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run \"$CLAUDE_PROJECT_DIR\"/scripts/markdown_formatter.py"
                    },
                    {
                        "type": "command",
                        "command": "uv run \"$CLAUDE_PROJECT_DIR\"/scripts/python_formatter.py --blocking"
                    }
                ]
            }
        ]
    }
}
